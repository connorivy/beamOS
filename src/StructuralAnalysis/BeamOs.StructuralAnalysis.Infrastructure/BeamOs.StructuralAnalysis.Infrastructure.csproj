<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsAotCompatible Condition="'$(BeamOsEnableAot)' == 'true'">true</IsAotCompatible>
	<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
	<BeamOsUsePostgres>true</BeamOsUsePostgres>
	<BeamOsUseSqlite>false</BeamOsUseSqlite>
	<InterceptorsNamespaces>$(InterceptorsNamespaces);Microsoft.EntityFrameworkCore.GeneratedInterceptors</InterceptorsNamespaces>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.EntityFrameworkCore" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<!-- <PackageReference Include="MathNet.Numerics.MKL.Win-x64" />
		<PackageReference Include="MathNet.Spatial" /> -->
		<PackageReference Include="Riok.Mapperly" />
		<!-- <PackageReference Include="UnitsNet" /> -->
		<!-- <PackageReference Include="MediatR" /> -->
    	<!-- <PackageReference Include="CSparse" /> -->
		<PackageReference Include="ServiceScan.SourceGenerator">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.EntityFrameworkCore.Tasks" >
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<PropertyGroup Condition="'$(BeamOsUsePostgres)' == 'true'">
		<DefineConstants>$(DefineConstants);Postgres</DefineConstants>
	</PropertyGroup>

	<ItemGroup Condition="'$(BeamOsUsePostgres)' == 'true'">
		<PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
		<PackageReference Include="EntityFrameworkCore.Exceptions.PostgreSQL" />
	</ItemGroup>

	<PropertyGroup Condition="'$(BeamOsUseSqlite)' == 'true'">
		<DefineConstants>$(DefineConstants);Sqlite</DefineConstants>
	</PropertyGroup>

	<ItemGroup Condition="'$(BeamOsUseSqlite)' == 'true'">
		<PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" />
		<PackageReference Include="EntityFrameworkCore.Exceptions.Sqlite" />
	</ItemGroup>

	<ItemGroup>
	  <!-- <ProjectReference Include="..\..\..\tests\BeamOs.Tests.Common\BeamOs.Tests.Common.csproj" /> -->
	  <ProjectReference Include="..\..\Identity\BeamOs.Identity\BeamOs.Identity.csproj" />
	  <ProjectReference Include="..\BeamOs.StructuralAnalysis\BeamOs.StructuralAnalysis.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="AnalyticalResults\EnvelopeResultSets\" />
	</ItemGroup>
</Project>

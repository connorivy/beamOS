@* <MudContainer MaxWidth="MaxWidth.False" Gutters="false" Class="h-full relative"> *@
<MudSimpleTable Dense="true" Class="w-max">
        <thead>
            <th colspan="2">
                Problem Source Information
            </th>
        </thead>
        <tbody>
            <tr>
                <td>
                    Source Name:
                </td>
                <td>
                    @SourceInfo.SourceName
                </td>
            </tr>
            <tr>
                <td>
                    Source Type:
                </td>
                <td>
                    @SourceInfo.SourceType
                </td>
            </tr>
            <tr>
                <td>
                    Model Name:
                </td>
                <td>
                    @SourceInfo.ModelName
                </td>
            </tr>
            <tr>
                <td>
                    Element Name:
                </td>
                <td>
                    @SourceInfo.ElementName
                </td>
            </tr>
        </tbody>
    </MudSimpleTable>
@* </MudContainer> *@

<div class="custom-tooltip" id="custom-tooltip1" style="position: absolute; display: none; pointer-events: none;" />
<div class="custom-tooltip" id="custom-tooltip2" style="position: absolute; display: none; pointer-events: none;" />
<div class="custom-tooltip" id="custom-tooltip3" style="position: absolute; display: none; pointer-events: none;" />

<div class="chart-container h-full">
    <canvas id="chart1" class="h-1/3"></canvas>
    <canvas id="chart2" class="h-1/3"></canvas>
    <canvas id="chart3" class="h-1/3"></canvas>

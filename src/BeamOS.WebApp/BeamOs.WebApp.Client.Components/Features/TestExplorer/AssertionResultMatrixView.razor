<MudCard>
    <MudSimpleTable Dense="true" Class="min-w-fit max-h-full pointer-events-auto">
        @* <thead class="font-bold">
            <tr>
                <th colspan="@matrix.GetLength(1)" class="justify-center center-content !font-bold">
                    @header
                </th>
            </tr>
        </thead> *@
        <tbody>
        @foreach (var (header, matrix) in ExpectedCalculatedDifferenceEnumerable)
        {
            <tr>
                @if (this.ComparedValueNameCollection is not null)
                {
                    <td class="!px-2 !py-0 border-none">
                    </td>
                }
                <td colspan="@matrix.GetLength(1)" class="justify-center center-content !font-bold border-0 bg-transparent">
                    <MudText Color="Color.Primary">@header</MudText>
                </td>
            </tr>
            @for (int rowIndex = 0; rowIndex < matrix.GetLength(0); rowIndex++)
            {
                <tr>
                    @if (this.ComparedValueNameCollection is not null)
                    {
                        <td class="!px-2 !py-0 border-none">
                            @this.ComparedValueNameCollection.ElementAt(rowIndex)
                        </td>
                    }
                    @for (int colIndex = 0; colIndex < matrix.GetLength(1); colIndex++)
                    {
                        <td class="!px-2 !py-0 border-none">
                            @(matrix[rowIndex, colIndex].ToString() ?? "NaN")
                        </td>
                    }
                </tr>
            }
        }
        </tbody>
    </MudSimpleTable>
</MudCard>

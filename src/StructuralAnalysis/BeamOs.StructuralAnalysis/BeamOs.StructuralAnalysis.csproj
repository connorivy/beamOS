<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
    <PublishAot Condition="'$(BeamOsEnableAot)' == 'true'">true</PublishAot>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <BeamOsUseInMemoryInfra Condition="'$(BeamOsUseInMemoryInfra)' == ''">true</BeamOsUseInMemoryInfra>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Riok.Mapperly" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="../../../codeGen/BeamOs.CodeGen.StructuralAnalysisApiClient/BeamOs.CodeGen.StructuralAnalysisApiClient.csproj" />
    <ProjectReference Include="..\BeamOs.StructuralAnalysis.SourceGenerator\BeamOs.StructuralAnalysis.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <ProjectReference Include="..\BeamOs.StructuralAnalysis.Contracts\BeamOs.StructuralAnalysis.Contracts.csproj" />
  </ItemGroup>

	<PropertyGroup Condition="'$(BeamOsUseSqlite)' == 'true'">
		<DefineConstants>$(DefineConstants);Sqlite</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(BeamOsUseInMemoryInfra)' == 'true'">
		<DefineConstants>$(DefineConstants);InMemory</DefineConstants>
	</PropertyGroup>

	<ItemGroup Condition="'$(BeamOsUseInMemoryInfra)' == 'true'">
    <ProjectReference Include="../BeamOs.StructuralAnalysis.Core/BeamOs.StructuralAnalysis.Core.csproj" />
	</ItemGroup>
	<ItemGroup Condition="'$(BeamOsUseSqlite)' == 'true'">
    <ProjectReference Include="../BeamOs.StructuralAnalysis.Core/BeamOs.StructuralAnalysis.Core.csproj" />
    <ProjectReference Include="../BeamOs.StructuralAnalysis.Infrastructure/BeamOs.StructuralAnalysis.Infrastructure.csproj" />
	</ItemGroup>
	<ItemGroup Condition="'$(BeamOsUseSqlite)' != 'true'">
    <ProjectReference Include="../BeamOs.StructuralAnalysis.Core/BeamOs.StructuralAnalysis.Core.csproj" PrivateAssets="all" />
	</ItemGroup>

  <Target Name="EchoDefines" BeforeTargets="CoreCompile">
    <Message Importance="high" Text="BeamOsUseSqlite: $(BeamOsUseSqlite)" />
    <Message Importance="high" Text="Defined symbols: $(DefineConstants)" />
  </Target>

</Project>
